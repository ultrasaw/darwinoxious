layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar";
        }
        children
    }

    // Side-by-side: yazi (no preview) on left, helix on right
    tab name="hx" focus=true {
        pane split_direction="vertical" {
            pane size="20%" focus=true {
                name "yazi"
                command "sh"
                args "-c" "YAZI_CONFIG_HOME=$HOME/.config/yazi-minimal yazi"
                start_suspended false
                close_on_exit false
            }
            pane size="80%" {
                name "helix"
                command "hx"
                start_suspended false
                close_on_exit false
            }
        }
    }

}
